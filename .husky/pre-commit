#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "Running pre-commit hooks..."

# Run type check
bun run typecheck
if [ $? -ne 0 ]; then
  echo "TypeScript check failed. Aborting commit."
  exit 1
fi

# Run linter
bun run lint
if [ $? -ne 0 ]; then
  echo "Linting failed. Aborting commit."
  exit 1
fi

echo "Pre-commit checks passed."
exit 0
